@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-3 fw-bold text-primary">
            <i class="bi bi-cloud-sun"></i> UC.SOFTIP
        </h1>
        <p class="lead text-muted">Modern Web Application with ASP.NET Core</p>
    </div>
    
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h4 class="mb-0">
                        <i class="bi bi-wifi"></i> API Connection Status
                    </h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.ApiStatus == "success")
                    {
                        <div class="alert alert-success d-flex align-items-center" role="alert">
                            <i class="bi bi-check-circle-fill me-2 fs-4"></i>
                            <div>
                                <strong>Connected Successfully!</strong> API is responding normally.
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="bi bi-x-circle-fill me-2 fs-4"></i>
                            <div>
                                <strong>Connection Error:</strong> @ViewBag.ApiStatus
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    @if (ViewBag.WeatherList != null && ((List<UC.SOFTIP.Web.Controllers.WeatherForecast>)ViewBag.WeatherList).Count > 0)
    {
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                        <h4 class="mb-0">
                            <i class="bi bi-thermometer-half"></i> Weather Forecast Data
                        </h4>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col" class="py-3"><i class="bi bi-calendar3"></i> Date</th>
                                        <th scope="col" class="py-3"><i class="bi bi-thermometer"></i> Temp (째C)</th>
                                        <th scope="col" class="py-3"><i class="bi bi-thermometer-low"></i> Temp (째F)</th>
                                        <th scope="col" class="py-3"><i class="bi bi-cloud-sun"></i> Summary</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var weather in (List<UC.SOFTIP.Web.Controllers.WeatherForecast>)ViewBag.WeatherList)
                                    {
                                        <tr>
                                            <td class="py-3">@weather.Date.ToString("dddd, MMMM dd, yyyy")</td>
                                            <td class="py-3">
                                                <span class="badge bg-info fs-6">@weather.TemperatureC째C</span>
                                            </td>
                                            <td class="py-3">
                                                <span class="badge bg-warning text-dark fs-6">@weather.TemperatureF째F</span>
                                            </td>
                                            <td class="py-3">
                                                <span class="badge" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                                    @weather.Summary
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    
    <div class="row mt-5">
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow border-0">
                <div class="card-body text-center">
                    <i class="bi bi-code-square display-4 text-primary mb-3"></i>
                    <h5 class="card-title">RESTful API</h5>
                    <p class="card-text text-muted">Backend API service with ASP.NET Core</p>
                    <a href="http://localhost:5100" target="_blank" class="btn btn-outline-primary">
                        <i class="bi bi-box-arrow-up-right"></i> View API
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow border-0">
                <div class="card-body text-center">
                    <i class="bi bi-globe display-4 text-success mb-3"></i>
                    <h5 class="card-title">Web Application</h5>
                    <p class="card-text text-muted">Modern frontend with MVC pattern</p>
                    <a href="https://docs.microsoft.com/aspnet/core" target="_blank" class="btn btn-outline-success">
                        <i class="bi bi-book"></i> Learn More
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow border-0">
                <div class="card-body text-center">
                    <i class="bi bi-broadcast display-4 text-danger mb-3"></i>
                    <h5 class="card-title">Real-time Notifications</h5>
                    <p class="card-text text-muted">SignalR for live updates</p>
                    <button class="btn btn-outline-danger" disabled>
                        <i class="bi bi-gear"></i> Coming Soon
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(102, 126, 234, 0.1);
    }
</style>
